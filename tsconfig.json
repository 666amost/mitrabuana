{
    "$schema":  "https://json.schemastore.org/tsconfig",
    "compilerOptions":  {
                            "target":  "ES2022",
                            "lib":  [
                                        "DOM",
                                        "DOM.Iterable",
                                        "ES2022"
                                    ],
                            "allowJs":  true,
                            "strict":  true,
                            "esModuleInterop":  true,
                            "allowSyntheticDefaultImports":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "module":  "ES2022",
                            "moduleResolution":  "bundler",
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "noEmit":  true,
                            "jsx":  "react-jsx",
                            "baseUrl":  ".",
                            "paths":  {
                                          "~/*":  [
                                                      "app/*"
                                                  ]
                                      },
                            "types":  [
                                          "@react-router/node",
                                          "vite/client"
                                      ],
                            "rootDirs":  [
                                             ".",
                                             "./.react-router/types"
                                         ],
                            "skipLibCheck":  true
                        },
    "include":  [
                    "remix.env.d.ts",
                    ".react-router/types/**/*",
                    "**/*.ts",
                    "**/*.tsx"
                ],
    "exclude":  [
                    "node_modules",
                    "build",
                    "temp-rr"
                ]
}
